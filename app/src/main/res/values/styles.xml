    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/darkGray</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:textColor">@color/white</item>

    </style>



    <style name="SpinnerWhiteTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_white_spiner</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="SpinnerWhiteLocationTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_white_location</item>
        <item name="android:textColor">@color/black</item>

    </style>
    <style name="SpinnerWhiteOccupationTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_white_occupation</item>
        <item name="android:textColor">@color/black</item>

    </style>


    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
    </style>
    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">

    </style>

    <style name="customSpinnerStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_row_spinner</item>
        <item name="android:paddingRight">@dimen/size_40</item>
        <item name="android:divider">@color/white</item>
        <item name="android:dividerHeight">3dp</item>

    </style>


    <style name="custom_no_border_SpinnerStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/custom_row_no_border_spinner_layout</item>
        <item name="android:paddingRight">@dimen/size_40</item>

    </style>


    <style name="custom_no_border" parent="@android:style/Theme.Holo">
        <item name="android:dropDownListViewStyle">@style/custom_no_row_border</item>
    </style>

    <style name="custom_no_row_border" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">#FFEEEEEE</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_row_spinner</item>
        <item name="android:paddingRight">@dimen/size_40</item>
    </style>


    <style name="locationSpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_dashboard_location_spinner</item>
        <item name="android:textColor">@color/white</item>

    </style>
</resources>
